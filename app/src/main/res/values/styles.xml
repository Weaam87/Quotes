<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- TextView Style for name -->
    <style name="Widget.Quotes.TextView.name" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/dancing_script_bold</item>
    </style>

    <!-- TextView Style for label -->
    <style name="Widget.Quotes.TextView.label" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/lilita_one</item>
    </style>

    <!-- TextView Style for quote -->
    <style name="Widget.Quotes.TextView.quote" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/lilita_one</item>
    </style>

    <!-- Button Style -->
    <style name="Widget.Quotes.Button" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/lilita_one</item>
    </style>
</resources>